generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     String
  rooms    Room[]
  reserves Reserve[]
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  size     Int
  note     String?
  user     User      @relation(fields: [user_id], references: [id])
  user_id  Int
  reserves Reserve[]
}

model Reserve {
  id       Int      @id @default(autoincrement())
  name     String
  dateInit DateTime
  dateEnd  DateTime
  user     User     @relation(fields: [user_id], references: [id])
  user_id  Int
  room     Room     @relation(fields: [room_id], references: [id])
  room_id  Int
}
